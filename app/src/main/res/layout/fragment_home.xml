<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_embed_menu"
        style="@style/Widget.Custom.Button.Menu"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="@dimen/default_dimen"
        android:layout_marginTop="32dp"
        android:text="Embedding"
        app:layout_constraintEnd_toStartOf="@+id/btn_compress_menu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_compress_menu"
        style="@style/Widget.Custom.Button.Menu"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginHorizontal="@dimen/default_dimen"
        android:layout_marginTop="32dp"
        android:text="Compression"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_embed_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_decompress_menu"
        style="@style/Widget.Custom.Button.Menu"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/default_dimen"
        android:text="Decompression"
        app:layout_constraintEnd_toStartOf="@+id/btn_extract_menu"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_embed_menu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_extract_menu"
        style="@style/Widget.Custom.Button.Menu"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/default_dimen"
        android:text="Extraction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_decompress_menu"
        app:layout_constraintTop_toBottomOf="@+id/btn_compress_menu" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_about_menu"
        style="@style/Widget.Custom.Button.Menu"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="@dimen/default_dimen"
        android:text="About"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_decompress_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>